---
const { certifications } = Astro.props;
---

<section class="mb-12">
  <h2 class="text-3xl font-bold text-center mb-6">Certificaciones</h2>
  <ul class="list-disc list-inside">
    {certifications.map(cert => (
      <li key={cert.title}>
        <strong>{cert.title}</strong> - {cert.issuer}
      </li>
    ))}
  </ul>
</section>
