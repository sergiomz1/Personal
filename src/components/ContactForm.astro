

<form class="bg-white p-6 rounded-lg shadow-md" method="POST" action="/send-message">
  <h2 class="text-2xl font-bold mb-4">Contactame</h2>
  <label class="block mb-2" for="name">Nombre</label>
  <input type="text" id="name" name="name" class="w-full border border-gray-300 p-2 rounded mb-4" required />
  
  <label class="block mb-2" for="email">Correo Electronico</label>
  <input type="email" id="email" name="email" class="w-full border border-gray-300 p-2 rounded mb-4" required />
  
  <label class="block mb-2" for="message">Mensaje</label>
  <textarea id="message" name="message" class="w-full border border-gray-300 p-2 rounded mb-4" rows="4" required></textarea>
  
  <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
    Enviar
  </button>
</form>
