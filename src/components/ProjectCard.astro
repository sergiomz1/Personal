---
const { title, description, image, link } = Astro.props;
---
<div class="max-w-sm rounded-lg overflow-hidden shadow-lg bg-white transition-transform transform hover:scale-105">
  <img class="w-full h-48 object-cover" src={image} alt={title} />
  <div class="p-4">
    <div class="font-bold text-xl mb-2">{title}</div>
    <p class="text-gray-700 text-base">{description}</p>
  </div>
  <div class="p-4">
    <a href={link} class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
      Ver Proyecto
    </a>
  </div>
</div>

